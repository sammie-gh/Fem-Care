<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/txtTitleNotific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/ovulation_alarm_details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtTitleNotific"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:background="@color/colorBlack" />

    <ListView
        android:id="@+id/listDefNotificationsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageQMark"
        android:layout_below="@+id/divider1"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageQMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_alarm_white_48dp"
        android:tint="@color/colorGrey"/>
</RelativeLayout>
